<!-- Header -->
<header class="bg-primary py-5 mb-5">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-lg-12">
                <h1 class="display-4 text-white mt-5 mb-2">MileStones Application</h1>

            </div>
        </div>
    </div>
</header>

<!-- Page Content -->
<div class="container">

    <div class="row">
        <div class="col-md-8 mb-5">
            <h2>Update a MileStone here:</h2>
            <hr>
            <form method="POST" action="/updatems">
                <label for="id">Milestone ID number to change:</label>
                <input type="text" id="id" name="id">
                <br><label for="Milestone Name">Milestone Name:</label>
                <input type="text" id="msname" name="msname">
                <br><label for="Milestone Description">Milestone Description:</label>
                <input type="text" id="msdesc" name="msdesc">
                <br><label for="duedate">Due Date(Format: YYYY-MM-DD)</label>
                <input type="text" id="duedate" name="duedate">
                <br>
                <input type="submit" value="Update Milestone">
            </form>
        </div>
        <div class="col-md-4 mb-5">
            <h2>User Logged In</h2>
            <hr>
            <form action="/login">
                <button type="submit">Login</button>
            </form>
            <p>
                If you're logged in your name is: {{currentUsername}}
            </p>
            <form action="/logout" method="POST">
                <button type="submit">Logout</button>
            </form>
        </div>
    </div>

</div>
